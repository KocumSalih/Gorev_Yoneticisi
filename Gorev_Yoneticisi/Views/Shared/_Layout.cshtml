<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Piton Ar-ge ve Yazılım Evi Görev Yöneticisi">
    <meta name="author" content="Salih Koç">
    <title>@ViewData["Title"]</title>
    @RenderSection("Head", false)
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

    <!-- Header -->
    <div class="container">
        <div class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top border-bottom">
            <p class="col-md-8 mb-0 text-muted">© Salih Koç - Görev Yöneticisi</p>
            <div class="col-md-3 text-end">
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="container-fluid bg-secondary py-5">
        <div class="bg-light col-md-10 p-5 py-4 mx-auto border-top " style="border-radius: 30px;">
            <div class="rounded mx-auto">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="container">
        <div class="py-3 my-4">
            <p class="text-center">Salih Koç - Görev Yöneticisi</p>
            <hr class="my-4">
            <p class="text-center text-muted">© PITON Ar-Ge ve Yazılım Evi</p>
        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js" integrity="sha512-nnzkI2u2Dy6HMnzMIkh7CPd1KX445z38XIu4jG1jGw7x5tSL3VBjE44dY4ihMU1ijAQV930SPM12cCFrB18sVw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    @RenderSection("Script", false)
</body>
</html>

